{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Reset Password</h1>

                {{ form_start(form) }}

                {% if not form.vars.valid %}
                    <div class="alert alert-warning">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}
                  {{ form_row(form.plainPassword.first, {'label': 'Password'}) }}
                  {{ form_row(form.plainPassword.second, {'label': 'Repeat Password'}) }}
                  <button type="submit" class="btn btn-primary" formnovalidate>Reset Password</button>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}
